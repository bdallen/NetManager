<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Uh Oh Spaghettio</title>

    <!-- JQuery -->
    <script src="/js/jquery.js"></script>

    <!-- Bootstrap -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <script src="/js/bootstrap.min.js"></script>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
  <body>
<style>
body { background-image: url(data:image/png;base64,);}
.error-template {padding: 40px 15px;text-align: center;}
.error-actions {margin-top:15px;margin-bottom:15px;}
.error-actions .btn { margin-right:10px; }
.error-details {margin-top:40px;margin-bottom:40px;}
</style>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="error-template">
                <h1>Oops!</h1>
                <h2>Looks like we have hit a snag! <%- @status %></h2>
                <div class="error-details">
                    <%- @message %>
                </div>
                <div class="error-actions">
                  <a href="#" id="ShowStack" class="btn btn-default btn-lg"><span class="glyphicon glyphicon-asterisk"></span> View Stack Trace </a>
                  <a href="" class="btn btn-default btn-lg"><span class="glyphicon glyphicon-envelope"></span> Contact Support </a>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="stack" class="panel panel panel-info" style="display: none; width: 50%; margin: 0 auto;">
  <div class="panel-heading">
    <h3 class="panel-title">Stack Trace</h3>
  </div>
  <div class="panel-body">
    <%- @stack %>
  </div>
</div>
<script>
$(document).ready(function() {
    $("#ShowStack").click(function() {
      $("#stack").show("slow");
      return false;
    });
});
</script>
